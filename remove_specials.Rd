\name{remove_specials}
\alias{remove_specials}
\title{Remove special characters from text}
\description{Removes all non-alphanumeric characters from the input text.}
\usage{remove_specials(text)}
\arguments{
  \item{text}{A character string or vector}
}
\value{Character string or vector without special characters}
\examples{
remove_specials("Hello, World!")
}
